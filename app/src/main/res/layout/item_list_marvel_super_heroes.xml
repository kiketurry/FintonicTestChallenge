<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/super_hero_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_list_super_heroes_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/super_hero_image"
                style="@style/image_item_list_super_heroes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/super_hero_name"
                style="@style/name_item_list_super_heroes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                tools:text="Super Hero"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>